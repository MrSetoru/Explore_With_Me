			"name": "Добавление комментария к событию 1",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"First comment — status 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"const response = pm.response.json();",
							"pm.expect(response.text).to.equal(\"Первый тестовый комментарий\");",
							"pm.expect(response.creator).to.equal(pm.environment.get(\"userId\"));",
							"pm.expect(response.event).to.equal(5);",
							"pm.environment.set(\"commentId1\", response.id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
